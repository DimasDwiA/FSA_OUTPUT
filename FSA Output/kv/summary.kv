<Summary>:
    MDFloatLayout:
        md_bg_color: [0, 0, 0, 1]
    MDLabel:
        text: "Order Summary"
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.9}
        font_size: "25sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDLabel:
        text: "Order Number :"
        halign: "center"
        pos_hint: {'center_x': 0.3,'center_y': 0.75}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDLabel:
        text: "Pizza Slices :"
        halign: "center"
        pos_hint: {'center_x': 0.3,'center_y': 0.65}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDLabel:
        text: "Pizza Flavor :"
        halign: "center"
        pos_hint: {'center_x': 0.3,'center_y': 0.55}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDLabel:
        text: "Price :"
        halign: "center"
        pos_hint: {'center_x': 0.3,'center_y': 0.45}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDLabel:
        text: "Estimated Cooking time :"
        halign: "center"
        pos_hint: {'center_x': 0.3,'center_y': 0.35}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDFillRoundFlatButton:
        text: "O R D E R"
        font_name: "Poppins-SemiBold"
        pos_hint: {'center_x': 0.65,'center_y': 0.15}
        size_hint: .2, .1
        md_bg_color: [1, 0, 0, 1]
        on_release:
            root.manager.current = "final"
    MDFillRoundFlatButton:
        text: "C A N C E L"
        font_name: "Poppins-SemiBold"
        pos_hint: {'center_x': 0.35,'center_y': 0.15}
        size_hint: .2, .1
        md_bg_color: [1, 0, 0, 1]
        on_release:
            root.cancel()
    MDLabel:
        id: id_cancel
        text: root.label_text
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.27}
        font_size: "12sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBoldItalic"
        size_hint_x: .9
    MDLabel:
        id: id_cancel
        text: root.text
        halign: "center"
        pos_hint: {'center_x': 0.65,'center_y': 0.65}
        font_size: "17sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBoldItalic"
        size_hint_x: .9
    MDLabel:
        id: id_cancel
        text: root.tulis
        halign: "center"
        pos_hint: {'center_x': 0.65,'center_y': 0.55}
        font_size: "17sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBoldItalic"
    MDLabel:
        id: id_cancel
        text: root.price
        halign: "center"
        pos_hint: {'center_x': 0.65,'center_y': 0.45}
        font_size: "17sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBoldItalic"
    MDLabel:
        id: id_cancel
        text: root.order
        halign: "center"
        pos_hint: {'center_x': 0.65,'center_y': 0.75}
        font_size: "17sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBoldItalic"
    MDLabel:
        id: id_cancel
        text: root.time
        halign: "center"
        pos_hint: {'center_x': 0.65,'center_y': 0.35}
        font_size: "17sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBoldItalic"
    MDFloatingActionButton:
        icon: "information"
        theme_text_color: "Custom"
        pos_hint: {'center_x': 0.9,'center_y': 0.9}
        text_font_size: 1
        size_hint: .07, .07
        elevation_normal: 0
        md_bg_color: [0, 0, 0, 0]
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'diagram'
        
