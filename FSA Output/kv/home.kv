<Home>:
    MDBoxLayout:
        md_bg_color: [0, 0, 0, 1]
    Image:
        source: "assets/Gambar/pizza2.png"
        size_hint: .5, .5
        pos_hint: {'center_x': 0.5,'center_y': 0.59}
    MDLabel:
        text: "Hello Pizzaholics!!!"
        halign: "center"
        pos_hint: {'center_y': 0.9}
        font_size: "37sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-Bold"
    MDLabel:
        text: "Welcome to Vending Machine Pizza"
        size_hint_x: .4
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.27}
        font_size: "20sp"
        font_name: "Poppins-SemiBold"
        color: rgba(252, 250, 250)
    MDFillRoundFlatButton:
        text: "O R D E R"
        font_name: "Poppins-SemiBold"
        pos_hint: {'center_x': 0.5,'center_y': 0.15}
        size_hint: .3, .05
        md_bg_color: [1, 0, 0, 1]
        on_release:
            root.manager.current = "balance"

