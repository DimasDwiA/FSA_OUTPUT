<Ordering>:
    MDFloatLayout:
        md_bg_color: [0, 0, 0, 1]
    MDLabel:
        text: "Thank you for ordering our pizza!!"
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.84}
        font_size: "23sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDLabel:
        text: "Right now your pizza is being carefully prepared. Please be patient for a moment, we will serve you delicious pizza soon"
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.75}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "timesnewroman_bold"
        size_hint_x: .8
    Image:
        source: "assets/Gambar/oven.png"
        size_hint: .5, .5
        pos_hint: {'center_x': 0.5,'center_y': 0.47}
    MDLabel:
        text: "Click the buttons below to view transition diagrams, mathematical notation, and transition tables"
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.23}
        font_size: "10sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBoldItalic"
    MDFillRoundFlatButton:
        text: "H E R E"
        font_name: "Poppins-SemiBold"
        pos_hint: {'center_x': 0.5,'center_y': 0.15}
        size_hint: .05, .05
        md_bg_color: [1, 0, 0, 1]
        on_release:
            root.manager.current = 'diagram'