<Balance>:
    MDFloatLayout:
        md_bg_color: [0, 0, 0, 1]
    MDLabel:
        text: "Before ordering your favorite pizza please enter your money first"
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.77}
        font_size: "25sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
        size_hint_x: .55
    MDFillRoundFlatButton:
        text: "50000"
        font_name: "Poppins-SemiBold"
        pos_hint: {'center_x': 0.2,'center_y': 0.5}
        size_hint: .2, .1
        md_bg_color: [1, 0, 0, 1]
        on_release:
            root.limapuluh()
    MDFillRoundFlatButton:
        text: "100000"
        font_name: "Poppins-SemiBold"
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        size_hint: .2, .1
        md_bg_color: [1, 0, 0, 1]
        on_release:
            root.seratus()
    MDFillRoundFlatButton:
        text: "150000"
        font_name: "Poppins-SemiBold"
        pos_hint: {'center_x': 0.8,'center_y': 0.5}
        size_hint: .2, .1
        md_bg_color: [1, 0, 0, 1]
        on_release:
            root.seratuslimapuluh()
    MDLabel:
        text: "YOUR BALANCE :"
        halign: "center"
        pos_hint: {'center_x': 0.45,'center_y': 0.175}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"
    MDLabel:
        id: id_angka
        text: root.label_text
        halign: "center"
        pos_hint: {'center_x': 0.62,'center_y': 0.175}
        font_size: "20sp"
        color: rgba(252, 250, 250)
        font_name: "Poppins-SemiBold"